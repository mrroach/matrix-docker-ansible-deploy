#jinja2: lstrip_blocks: "True"
[Unit]
Description=Matrix Mautrix syncproxy server

{% for service in matrix_mautrix_syncproxy_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}

{% for service in matrix_mautrix_syncproxy_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}

[Service]
Type=simple
Environment="HOME={{ matrix_systemd_unit_home_path }}"
ExecStartPre=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} kill matrix-mautrix-syncproxy 2>/dev/null || true'
ExecStartPre=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} rm matrix-mautrix-syncproxy 2>/dev/null || true'

# Intentional delay, so that the homeserver (we likely depend on) can manage to start.
ExecStartPre={{ matrix_host_command_sleep }} 5

ExecStart={{ matrix_host_command_docker }} run --rm --name matrix-mautrix-syncproxy \
			--log-driver=none \
			--network={{ matrix_docker_network }} \
			--user={{ matrix_user_uid }}:{{ matrix_user_gid }} \
			--cap-drop=ALL \
			--read-only \
			--tmpfs /tmp \
			{% if matrix_mautrix_syncproxy_container_http_host_bind_port %}
			-p {{ matrix_mautrix_syncproxy_container_http_host_bind_port }}:29328 \
			{% endif %}
			-v {{ matrix_mautrix_syncproxy_daemon_path }}:/syncproxyd:z \
			-v {{ matrix_mautrix_syncproxy_config_path }}:/config:z \
			{% for arg in matrix_mautrix_syncproxy_container_extra_arguments %}
			{{ arg }} \
			{% endfor %}
			{{ matrix_mautrix_syncproxy_docker_image }} \
			python3 -m mautrix_syncproxy -c /config/config.yaml --no-update

ExecStop=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} kill matrix-mautrix-syncproxy 2>/dev/null || true'
ExecStop=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} rm matrix-mautrix-syncproxy 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier=matrix-mautrix-syncproxy

[Install]
WantedBy=multi-user.target
